<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/img_detail_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_detail_name"
        android:text="Ruben Cuadra"
        android:textSize="25dp"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_detail_user"
        android:layout_toEndOf="@+id/img_detail_user"/>

    <RatingBar
        android:id="@+id/rating_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="@string/num_stars"
        android:scaleX="0.50"
        android:scaleY="0.50"
        android:stepSize="0.25"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_detail_user"
        android:layout_toEndOf="@+id/img_detail_user"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/detail_review"
            android:layout_height="wrap_content"
            android:text="@string/review"
            android:layout_below="@id/img_detail_user"
            />


    </RelativeLayout>

</ScrollView>