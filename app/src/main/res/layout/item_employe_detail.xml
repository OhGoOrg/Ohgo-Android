<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/container_detail_employee"
    android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_detail_employee"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            app:roundAsCircle="true"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:placeholderImageScaleType="focusCrop" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employee_detail_name"
        android:text="Ruben Cuadra"
        android:textSize="30dp"
        android:maxLines="1"
        android:layout_above="@+id/rating_star"
        android:layout_alignLeft="@+id/rating_star"
        android:layout_alignStart="@+id/rating_star"/>

        <RatingBar
                android:id="@+id/rating_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="@string/num_stars"
                android:scaleX="0.50"
                android:scaleY="0.50"
                android:stepSize="0.25"
                android:layout_alignBottom="@+id/img_detail_employee"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>


    </RelativeLayout>

